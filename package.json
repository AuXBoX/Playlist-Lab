{
  "name": "playlist-lab",
  "version": "1.0.1",
  "description": "Import, generate, and manage your Plex playlists",
  "main": "dist/main/main.js",
  "author": "Audexa",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.main.json && vite build",
    "start": "electron .",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && tsc -p tsconfig.main.json && electron .\"",
    "build:portable": "npm run build && electron-builder --win portable --config.win.signAndEditExecutable=false",
    "build:installer": "npm run build && electron-builder --win nsis --config.win.signAndEditExecutable=false",
    "build:mac": "npm run build && electron-builder --mac",
    "build:mac-dmg": "npm run build && electron-builder --mac dmg",
    "build:mac-zip": "npm run build && electron-builder --mac zip",
    "build:linux": "npm run build && electron-builder --linux",
    "build:linux-appimage": "npm run build && electron-builder --linux AppImage",
    "build:linux-deb": "npm run build && electron-builder --linux deb"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "tidal-music-api": "^1.2.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "electron": "^39.2.7",
    "electron-builder": "^24.9.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.0",
    "vite": "^7.3.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.audexa.playlist-lab",
    "productName": "Playlist Lab",
    "directories": {
      "output": "scripts/release"
    },
    "files": [
      "dist/**/*"
    ],
    "extraResources": [
      {
        "from": "src/renderer/logo.png",
        "to": "logo.png"
      },
      {
        "from": "scripts/release/.icon-ico/icon.ico",
        "to": "logo.ico"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "scripts/release/.icon-ico/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "portable": {
      "artifactName": "PlaylistLab-Portable-${version}.exe"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "src/renderer/logo-512.png",
      "category": "public.app-category.music"
    },
    "dmg": {
      "artifactName": "PlaylistLab-${version}-${arch}.dmg"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "src/renderer/logo-512.png",
      "category": "Audio"
    },
    "appImage": {
      "artifactName": "PlaylistLab-${version}-${arch}.AppImage"
    },
    "deb": {
      "artifactName": "PlaylistLab-${version}-${arch}.deb"
    }
  }
}
